<%= form_for(@local) do |f| %>
  <% if @local.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@local.errors.count, "error") %> prohibited this local from being saved:</h2>

      <ul>
      <% @local.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nombre" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Direccion" %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label "Direccion Google" %><br />
    <%= f.text_field :addressgoogle %>
  </div>
  <div class="field">
    <%= f.label "Telefono" %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label "Distrito" %><br />
    <%= f.select :district_id, @district_array, :prompt => "Seleccione distrito"  %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
